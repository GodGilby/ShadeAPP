<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#73CEC2"
    tools:context=".Relajacion2Activity">


    <Button
        android:id="@+id/buttonRelax"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:enabled="false"
        android:text="Exhala"
        android:textSize="25dp"
        android:fontFamily="serif-monospace"
        android:textColor="#ffff"
        android:background="@drawable/circle_button_relax"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonRelax2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textColor="#ffff"
        android:background="@drawable/circle_button_relax"
        app:layout_constraintBottom_toTopOf="@id/buttonRelax"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonRelax3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textColor="#ffff"
        android:background="@drawable/circle_button_relax"
        app:layout_constraintBottom_toTopOf="@id/buttonRelax2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonRelax4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textColor="#ffff"
        android:background="@drawable/circle_button_relax"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonRelax" />

    <Button
        android:id="@+id/buttonRelax5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textColor="#ffff"
        android:background="@drawable/circle_button_relax"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonRelax4" />

</android.support.constraint.ConstraintLayout>